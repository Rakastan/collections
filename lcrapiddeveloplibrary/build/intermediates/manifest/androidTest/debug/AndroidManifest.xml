<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaochao.lcrapiddeveloplibrary.test" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.xiaochao.lcrapiddeveloplibrary.test"
        android:targetPackage="com.xiaochao.lcrapiddeveloplibrary.test" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.xiaochao.lcrapiddeveloplibrary.Video.JCFullScreenActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.xiaochao.lcrapiddeveloplibrary.Exception.core.RecoveryActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:process=":recover"
            android:screenOrientation="portrait"
            android:theme="@style/RecoveryTheme.NoActionBar" >
        </activity>

        <service
            android:name="com.xiaochao.lcrapiddeveloplibrary.Exception.core.RecoveryService"
            android:enabled="true"
            android:exported="false"
            android:process=":recover" >
        </service>
    </application>

</manifest>